section.home

  .content-container
    position: absolute
    top: 100px
    left: 180px
    right: 180px
    bottom: 100px
    z-index: 1

    .content
      position: absolute
      top: 30px
      bottom: 30px
      right: 30px
      left: 30px
      z-index: 2

    .background-element
      // floating-left image
      position: absolute
      top: 0
      left: 0
      bottom: 0
      right: 60%
      background: gray
      background-image: url('/img/DSC_6077.JPG')
      background-size: cover
      background-position: center
      elevate()
      accent-top-left($white)
      accent-bottom-right($white)


  .hero-text
    position: absolute
    top: 50px
    left: 43%

    h1
      margin: 0
      line-height: 1
      font-weight: normal
      color: $black

      .top
        font-size: 45px

      .bottom
        font-size: 100px
        text-indent: 60px

    .subtext
      text-transform: uppercase
      text-align: right
      color: $black
      margin-top: 100px
      font-weight: bold
      letter-spacing: 2px
      text-transform: uppercase
      font-size: 12px

  a.cta
    position: absolute
    text-align: center
    right: 4px
    top: 270px
    width: 186px

  .section-background
    position: absolute
    left: 33%
    right: 0
    top: 0
    bottom: 0
    background-image: url('/img/FXT24900.jpg')
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    opacity: 0.4
