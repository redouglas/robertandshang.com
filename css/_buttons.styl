@require '_variables'

button, a.button
  text-decoration: none
  display: inline-block
  border: none
  padding: 8px 10px
  font-family: 'Lato'
  text-transform: uppercase
  letter-spacing: 2px
  font-weight: normal
  font-size: 11px
  cursor: pointer
  transition: background 200ms ease
  font-style: normal

.white
  background: $white
  color $black !important

  &:hover
    background: darken($white, 5)

.black
  background: $black
  color: $white !important

  &:hover
    background: lighten($black, 10)
