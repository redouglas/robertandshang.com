section.rsvp
  p.reminder
    margin-bottom: 40px
  form.loading
    pointer-events: none
    opacity: 0.3

  form.finished
    display: none

  .rsvp-success,
  .rsvp-error
    display: none

    &.show
      display: block

  .field
    margin-bottom: 20px

    label
      display: block
      text-transform: uppercase
      letter-spacing: 2px
      font-size: 11px
      margin-bottom: 4px

    input
      border: none
      border-bottom: 1px solid $black

    input, textarea, select
      width: 100%
      font-family: 'Playfair Display'
      letter-spacing: 0.5px
      padding: 3px
      border-radius: 0
      box-sizing: border-box
      font-size: 16px

    textarea
      height: 100px
      border: 1px solid $black

    select
      border: none
      appearance: none
      background: transparent
      font-family: 'Playfair Display'

    .select-wrap
      position: relative
      height: 28px
      border-bottom: 1px solid $black

      select
        position: absolute
        width: 100%
        top: 0
        left: 0
        right: 0
        bottom: 0
        text-indent: 5px
