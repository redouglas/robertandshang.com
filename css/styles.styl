@require _variables
@require _buttons
@require _font-treatments

body
  position: absolute
  overflow-y: auto
  overflow-x: hidden
  top: 0
  right: 0
  bottom: 0
  left: 0
  color: $black
  background-color: $white
  font-family: 'Lato', sans-serif
  letter-spacing: 0.5px
  font-size: 14px
  margin: 0 8px

h1, h2, h3, h4
  font-family: 'Playfair Display', serif
  margin-top: 0

.header
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 9
  height: 49px
  background: rgba(255, 255, 255, 0.7)

  .logo
    position: absolute
    top: 0px
    left: 35px
    background-image: url('/img/logo.svg')
    background-size: contain
    background-repeat: no-repeat
    background-position: center
    width: 30px
    height: 50px

  .rsvp, .registry
    position: absolute
    top: 10px
    right: 20px
    text-transform: uppercase
    letter-spacing: 2px
    font-size: 10px
    font-weight: bold

    a.rsvp-button
      margin-left: 10px

  .rsvp
    right: 120px

.left-side
  position: absolute
  left: -85px
  top: 50%
  margin-top: -20px
  transform: rotate(-90deg)
  text-transform: uppercase
  font-size: 10px
  letter-spacing: 2px

  .days
    font-weight: bold

section
  width: 100%
  display: inline-block
  padding: 70px 110px
  position: relative
  box-sizing: border-box
  min-height: 400px

  &.fullscreen
    height: 100%

  &.dark
    background-color: $black
    color: $white

    .section-header:after
      border-bottom 2px solid $white

  &.gray
    background-color: WhiteSmoke

.grid
  display: flex
  justify-content: space-between

.col-3
  width: 30%

.col-2
  width: 48%

.col-3x2
  width: 60%

.seperator
  display: block
  text-align: left
  margin: 20px 0 60px 0
  line-height: 0

  &:after
    content: ''
    width: 20%
    height: 2px
    background-color: $black
    display: inline-block


